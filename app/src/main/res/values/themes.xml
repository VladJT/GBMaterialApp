<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.GBMaterialApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Атрибуты цвета представлены множеством настроек, многие из которые перекочевали из Appcompat:
    ● colorPrimary — основной цвет вашего приложения;
    ● colorPrimaryVariant — более светлый или тёмный вариант основного цвета, используется
    в некоторых цветовых схемах;
    ● colorOnPrimary — цвет, используемый поверх вашего основного, например цвет текста или
    иконок;
    ● colorSecondary — вторичный цвет, часто используемый в качестве акцента;
    ● colorSecondaryVariant — более светлый или тёмный вариант акцентного цвета,
    используется в некоторых цветовых схемах;
    ● colorOnSecondary — цвет поверх акцентного;
    ● colorError — цвет для отображения ошибки, например для вывода ошибки в InputTextLayout
    (обычно это оттенок красного);
    ● colorSurface — цвет «поверхностей» (например, BottomSheet);
    ● android:colorBackground — цвет под всеми цветами.
    -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>


    <style name="AppTheme.IndigoTheme">
        <item name="themeColorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="colorAccent">@color/pink_dark</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="fontFamily">@font/beer</item>
    </style>

    <style name="AppTheme.PinkTheme">
        <item name="themeColorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/pink_light</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>
</resources>